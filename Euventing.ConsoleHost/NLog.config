<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="file" xsi:type="File" layout="${longdate} ${message} ${exception:format=tostring}" fileName="${basedir}/logs/logfile.txt" encoding="iso-8859-2" deleteOldFileOnStartup="true" />
    <target name="console" xsi:type="ColoredConsole" layout="${longdate}|${level:uppercase=true}|${logger}|${message}|${exception:format=tostring}" />
 </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="file" />
    <logger name="*" minlevel="Debug" writeTo="console" />
  </rules>
</nlog>